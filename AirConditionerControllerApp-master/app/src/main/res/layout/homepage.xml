<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/ib_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/tab_up" />

        <ImageView
            android:id="@+id/ib_down"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/tab_down" />

        <ImageView
            android:id="@+id/ib_cold"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/tab_cold"
            app:layout_constraintEnd_toStartOf="@+id/ib_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ib_switch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/tab_on_off"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="168dp" />

        <ImageView
            android:id="@+id/ib_hot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/tab_hot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_switch"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
